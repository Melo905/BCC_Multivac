# Tela Inicial
def main():
  continuar = True
  print("*****************************  TABELA EBBINGHAUS  *************************")
  print("\nInsira os assuntos que você estuda e o programa vai agendar suas revisoes.")
  while continuar == True:
    choice1 = input ("\n1)Novo arquivo      2)Consultar seu arquivo      3)Sair\n")
    if choice1 == "1":
        new_file()
    elif choice1 == "2":
